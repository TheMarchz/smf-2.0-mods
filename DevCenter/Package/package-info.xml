<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Yoshi2889:DevCenter</id>
	<name>DevCenter</name>
	<version>0.1</version>
	<type>modification</type>
	
	<install for="2.0 - 2.99.99">
		<modification>langs.xml</modification>
		<code>installhooks.php</code>
		<database>install.php</database>
		<require-file name="Subs-DevCenter.php" destination="$sourcedir">DevCenter core file</require-file>
	</install>
	
	<uninstall for="2.0 - 2.99.99">
		<modification reverse="true">langs.xml</modification>
		<code>uninstallhooks.php</code>
		<database>uninstall.php</database>
		<remove-file name="$sourcedir/Subs-DevCenter.php">DevCenter core file</remove-file>
	</uninstall>
</package-info>